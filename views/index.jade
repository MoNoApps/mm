doctype html
html(ng-app='MeetupApp')
  head
    title Meetup Presentation
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/custom.css')

  body(ng-controller="Presenter")
    include layouts/header

    .board(ng-hide="current")
      include content/dash

    .slide(ng-show="current")
      include content/slider

    include content/sections/footerbar
    include layouts/footer

    script(type='text/javascript', src='/js/libs/jquery.min.js')
    script(type='text/javascript', src='/js/libs/angular.min.js')
    script(type='text/javascript', src='/js/libs/bootstrap.min.js')
    script(type='text/javascript', src='/js/ng/app.js')
    script(type='text/javascript', src='/js/ng/slides.js')
    script(type='text/javascript', src='/js/ng/resources.js')
    script(type='text/javascript', src='/js/ng/presenter.js')
